<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Página principal</title>
    <!-- <link rel="stylesheet" href="css/bootstrap.min.css"> -->
    <link rel="stylesheet" href="_css/estilo.css">
    <link rel="stylesheet" href="_css/estiloCatalogoProdutos.css"> 
    <link rel="stylesheet" href="_css/estiloCatalogoCategorias.css">
    <style>
        nav#menu{
            display: block;
        }

        div#divBotao {
            height: auto;
            list-style: none;
            text-transform: uppercase;
            position: relative;
            left: 37%;
            border-radius: 5px;
        }
        
        button.botaoEditarCategoria {
            font-size: 1.2em;
            background-color:#dddddd;
            border: 0;
            margin-bottom: 1em;
            padding: 0.2em 0.6em;
            box-shadow: 2px 2px 2px rgba(0, 0, 0,0.2);  
            position: relative;
            cursor: pointer;
            margin-bottom: 0px;
            top: 87%;
            left: 42%;
            margin-right: -40%;
        }

        .botaoEditarCategoria:hover{
            background-color: #606060;
            box-shadow: inset 2px 2px 2px rgba(0, 0, 0,0.2);
            text-shadow: none;
        }

        img.image {
           width: -webkit-fill-available;
        }

        .botaoCadastro:hover{
            background-color: #606060;
            box-shadow: inset 2px 2px 2px rgba(0, 0, 0,0.2);
            text-shadow: none;
        }

    </style>
    <script lang="javascript" src="funcoes.js"></script>
  
</head>
<body>
    <div class="container-fluid">
        <div id="interface">
            <!-- <header id = "cabecalho">
                <nav id="menu" >  Determina um menu de navegação, tudo que estiver dentro dessa tag será considerada parte do menu -->
            <!-- </nav>  -->

            </header>
            <div id="interface">
                <header id = "cabecalho">
                    <!-- <h1>Loja do Fulano</h1> -->
                    <nav id="menu" > <!-- Determina um menu de navegação, tudo que estiver dentro dessa tag será considerada parte do menu -->
                        <ul>
                            <h1>Página inicial</h1>
                            <li><a href="/">Página principal</a> </li> 
                            <li><a href="categorias.ejs">Categorias</a></li>  
                            <li><a href="sobre_nos.ejs">Sobre nós</a></li>
                            <li><a href="login.ejs">Perfil</a></li>
                        </ul>
                    </nav>
                </header>
            <div id="divBotao">
                <form method="post" action="/pagcategoria">
                    <button class="botaoEditarCategoria" value="<%=tabel[0].dataValues.id%>" name="categoria" >Editar Categoria</button>
                </form>
            </div>
            <h3>Nome categoria:</h2>   
            <h4 style="font-family: Arial, Helvetica, sans-serif;"><%=tabel[0].dataValues.nome%></h3>  
            <h3>Descrição categoria:</h2>
            <h4 style="font-family: Arial, Helvetica, sans-serif;"><%=tabel[0].dataValues.des%></h4>
            <h3>Produtos da categoria:</h3>
            <section class="catalogo" id="catalogo">
                <%tabel[0].possuis.forEach(function(tabels){%>
                    <div class="cardsProdutos">
                            <img src="/uploads/<%=tabels.produto.dataValues.image%>" class="image" alt="Imagem Produto">
                        <div class="conteudoCard">
                            <h4><%=tabels.produto.dataValues.name%></h4>
                            <p><%=tabels.produto.dataValues.des%></p>
                            <form method="post" action="/produtopag">
                                <button type="submit" name="send" value="<%=tabels.produto.dataValues.id%>" >Visualizar</button>
                            </form>
                            <form method="post" action="/excluirdacateg">
                                <input type="hidden" value="<%=tabels.produto.dataValues.id%>" name="produto">
                                <input type="hidden" value="<%=tabel[0].dataValues.id%>" name="id">
                                <input type="hidden" value="<%=tabels.produto.dataValues.id%>" name="produto">
                                <input type="submit" value="Excluir" class="exclui">
                            </form>
                            
                        </div>
                    </div>
                <%})%>
                <br>
            </section>
            <footer id = "rodape"> <!--É o rodapé da página, onde fica as informações-->
                &copy; Copyright 2021 - by <a href="https://github.com/Gustavo-caetano">Gustavo Caetano</a>  e <a href="https://github.com/Valmir-Cunha">Valmir Cunha</a> 
            </footer>
        </div>
        <script type="text/javascript">
            function excluir(){
                document.getElementsByClassName("exclui").type="submit";
            }
        </script>
    </div>
</body>
